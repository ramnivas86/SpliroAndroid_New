<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/app_backGroundColor"
    >
    <RelativeLayout
        android:id="@+id/relappHSelect_loc_screen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@android:color/transparent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgBackAppH"
            android:layout_width="@dimen/header_height"
            android:layout_height="match_parent"
            android:background="@drawable/selector_button_back"
            android:clickable="true"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/btn_padding"
            android:src="@drawable/spl_ic_back_w_l" />


        <TextView
            android:id="@+id/txtTitleAppHB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:gravity="center"
            android:text="@string/title_activity_select_location"
            android:textColor="@android:color/white"
            android:textSize="@dimen/t_headertextsize" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/txtaddLocation"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/header_height"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:text="@string/add_location"
                android:gravity="center"
                android:background="@drawable/selector_button_back"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/btn_padding"
                android:padding="@dimen/btn_padding" />
        </LinearLayout>
    </RelativeLayout>
    <ListView
        android:id="@+id/listView_location"
        android:layout_above="@+id/rl_apply_cancel"
        android:layout_below="@+id/relappHSelect_loc_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/rl_apply_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/rl_apply_cancel_padding"
        android:paddingRight="@dimen/rl_apply_cancel_padding"
        >
        <TextView
            android:id="@+id/txt_apply_SLOC"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/component_hight"
            android:text="apply"
            android:gravity="center"
            android:textSize="@dimen/text_apply_cancel_size"
            android:layout_alignParentLeft="true"
            android:textColor="@color/home_btn_txt_color"
            />
        <TextView
            android:id="@+id/txt_cancel_SLoc"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/component_hight"
            android:text="cancel"
            android:gravity="center"
            android:textSize="@dimen/text_apply_cancel_size"
            android:layout_alignParentRight="true"
            android:textColor="@color/home_btn_txt_color"
            />

    </RelativeLayout>
</RelativeLayout>
