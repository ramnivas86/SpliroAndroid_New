<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/trans_color"
    android:paddingRight="@dimen/btn_padding"
    android:paddingLeft="@dimen/btn_padding"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/row_hight"
        android:layout_weight="4"
        android:background="@color/peach_color"
        android:paddingBottom="@dimen/btn_padding"
        android:paddingLeft="@dimen/btn_padding"
        android:paddingTop="@dimen/btn_padding">

        <arya.spliro.custom.CircularImageView
            android:id="@+id/cImgInA"
            android:layout_width="@dimen/invitee_img_h"
            android:src="@drawable/user"
            android:layout_height="@dimen/invitee_img_h"
            android:layout_alignParentLeft="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/cImgInA"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/signup_View_w"
            android:paddingRight="@dimen/signup_View_w">

            <TextView
                android:id="@+id/txtDisplayNameInA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/postLocContainerBackG"
                android:textSize="@dimen/txt_name_size" />

            <RatingBar
                android:id="@+id/rtInA"
                style="@style/CustomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSharesName"
                android:layout_gravity="center|left"
                android:layout_marginTop="@dimen/signup_View_w"
                android:layout_toRightOf="@+id/cImgShares"
                android:focusable="false"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.01" />
            <TextView
                android:id="@+id/txtPhoneInA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/postLocContainerBackG"
                android:textSize="@dimen/txt_name_size" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relCancelInA"
        android:layout_width="@dimen/row_hight"
        android:layout_height="@dimen/row_hight"
        android:background="@drawable/selector_button_back"
        android:layout_alignParentRight="true"
        android:gravity="center"
        >
    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:src="@drawable/ic_remove"

        />
    </RelativeLayout>
</LinearLayout>
</LinearLayout>
