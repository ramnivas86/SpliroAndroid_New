<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backGroundColor"
    >
    <RelativeLayout
        android:id="@+id/relappHBrowse"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@android:color/transparent"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnLocationB"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/selector_button_back"
            android:clickable="true"
            android:drawableLeft="@drawable/spl_ic_head_location"
            android:padding="@dimen/btn_padding"
            android:text="123456"
            android:textColor="@color/postLocContainerBackG" />


        <TextView
            android:id="@+id/txtTitleAppHB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:gravity="center"
            android:text="@string/title_browser"
            android:textColor="@android:color/white"
            android:textSize="@dimen/t_headertextsize" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/imgSearchBrowseB"
                android:layout_width="@dimen/header_height"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_button_back"
                android:clickable="true"
                android:padding="@dimen/btn_padding"
                android:src="@drawable/spl_ic_header_search" />
        </LinearLayout>
    </RelativeLayout>

   <!-- NOT SO IMPORTANT CUSTOM UI STUFF -->
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tab 1 says Hello :D"
        android:id="@+id/textView"
         android:textColor="@color/tabsScrollColor"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>