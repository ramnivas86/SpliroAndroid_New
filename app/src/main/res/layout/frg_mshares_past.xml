<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="arya.spliro.fragments.MYSharesFragment">

    <RelativeLayout
        android:id="@+id/relHMS"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/app_backGroundColor"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/imgBackHMS"
            android:layout_width="@dimen/header_height"
            android:layout_height="match_parent"
            android:background="@drawable/selector_button_back"
            android:clickable="true"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/btn_padding"
            android:src="@drawable/spl_ic_back_w_l" />

            <TextView
                android:id="@+id/txtTitleAppH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_activity_my_share"
                android:layout_margin="@dimen/btn_padding_5"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="@dimen/t_headertextsize" />





            <ImageView
                android:id="@+id/imgforwardHMS"
                android:layout_width="@dimen/header_height"
                android:layout_height="match_parent"
                android:background="@drawable/selector_button_back"
                android:clickable="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/btn_padding"
                android:layout_alignParentRight="true"
                android:src="@drawable/spl_ic_back_w_l"

                />
    </RelativeLayout>
    <TextView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relHMS"
        android:gravity="center" />
    <ListView
        android:id="@+id/lvPast"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:cacheColorHint="#00000000"
        android:layout_below="@+id/relHMS"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/deviderHeigh_my_share"
        android:fadeScrollbars="true"
        android:scrollingCache="false"
        android:smoothScrollbar="true">
        </ListView>


</RelativeLayout>
